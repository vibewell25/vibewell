{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist-scripts",
    "baseUrl": ".",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "./generate-component-docs.js"]
} 