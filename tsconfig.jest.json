{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "isolatedModules": true,
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "include": [
    "apps/web/src/**/*.ts",
    "apps/web/src/**/*.tsx",
    "apps/web/src/**/*.js",
    "apps/web/src/**/*.jsx",
    "apps/web/src/**/__tests__/**/*",
    "apps/web/src/**/*.test.ts",
    "apps/web/src/**/*.test.tsx",
    "apps/web/src/**/*.spec.ts",
    "apps/web/src/**/*.spec.tsx"
  ],
  "exclude": ["node_modules"]
} 