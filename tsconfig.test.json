{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "packages/types"
    ],
    "types": [
      "react",
      "react-dom",
      "jest",
      "node"
    ],
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": [
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
